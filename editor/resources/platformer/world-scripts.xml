<panel layout="GridBagLayout">
    <vbox>
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
        />
        <vbox border="TitledBorder(LineBorder(black,2),Script Data Search Paths,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox>
                <scrollpane>
                    <list id="script-data-paths" />
                </scrollpane>
            </hbox>
            <hbox>
                <button text="Add" id="add-path-button" />
                <button text="Remove" id="remove-path-button" />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),World Scripts,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox>
                <scrollpane>
                    <list id="scripts" />
                </scrollpane>
            </hbox>
            <hbox>
                <button text="Add" id="add-script-button" />
                <button text="Edit" id="edit-script-button" />
                <button text="Remove" id="remove-script-button" />
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Script Objects,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox>
                <scrollpane>
                    <list id="script-objects" />
                </scrollpane>
            </hbox>
            <hbox>
                <button text="Add" id="add-script-object-button" />
                <button text="Edit" id="edit-script-object-button" />
                <button text="Copy" id="copy-script-object-button" />
                <button text="Copy To" id="copy-script-object-to-button" />
                <button text="Remove" id="remove-script-object-button" />
            </hbox>
        </vbox>
        <glue />
    </vbox>
</panel>
