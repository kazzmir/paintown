<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
    <tabbedpane tabplacement="JTabbedPane.LEFT" id="all">
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            fill="GridBagConstraints.BOTH"
            anchor="GridBagConstraints.NORTHWEST"
            />
        <panel layout="GridBagLayout" id="properties-pane">
            <scrollpane layout="GridBagLayout">
                <gridbagconstraints
                    gridx="0"
                    gridy="0"
                    insets="1,1,1,1"
                    weightx="1"
                    weighty="1"
                    fill="GridBagConstraints.BOTH"
                    anchor="GridBagConstraints.NORTHWEST" />
                <panel layout="GridBagLayout" id="context" border="MatteBorder(2,2,2,2,667A63)">
                    <gridbagconstraints
                        gridx="0"
                        gridy="0"
                        insets="1,1,1,1"
                        weightx="1"
                        weighty="1"
                        fill="GridBagConstraints.BOTH"
                        anchor="GridBagConstraints.NORTHWEST" />
                </panel>

            </scrollpane>
        </panel>

        <panel layout="GridBagLayout" id="animation-pane">
            <vbox>
                <gridbagconstraints
                    gridx="0"
                    gridy="0"
                    weightx="1"
                    weighty="1"
                    fill="GridBagConstraints.BOTH"
                    anchor="GridBagConstraints.NORTHWEST"
                    />
                <hbox>
                    <button text="Add animation" id="add-animation" />
                    <button text="Remove animation" id="remove-animation" />
                    <button text="Copy animation" id="copy-animation" />
                    <glue />
                </hbox>

                <tabbedpane id="animations" border="MatteBorder(2,2,2,2,667A63)">
                    <gridbagconstraints
                        gridx="0"
                        gridy="1"
                        weightx="1"
                        weighty="0.9"
                        gridheight="1"
                        fill="GridBagConstraints.BOTH"
                        anchor="GridBagConstraints.NORTHWEST"
                        />
                </tabbedpane>
            </vbox>
        </panel>

        <panel layout="GridBagLayout" id="combo-pane" />

    </tabbedpane>
</panel>
