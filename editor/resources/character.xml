<panel layout="GridBagLayout">
	<vbox>
		<gridbagconstraints
			gridx="0"
			gridy="0"
			weightx="1"
			weighty="1"
			gridheight="1"
			anchor="GridBagConstraints.NORTHWEST"
			fill="GridBagConstraints.HORIZONTAL"
			/>
			<!--
			-->
		<hbox>				
			<label text="Name:" />
			<textfield size="20" id="name" />
		</hbox>
		<hbox>
			<label text="Health:" />
			<textfield size="4" id="health" />
		</hbox>
		<hbox>
			<label text="X: " />
			<textfield size="3" id="x" />
		</hbox>
		<hbox>
			<label text="Y: " />
			<textfield size="3" id="y" />
		</hbox>
		<hbox>
			<label text="Aggression: " />
			<textfield editable="false" size="3" id="aggression" />
		</hbox>
		<hbox>
			<label id="aggression-level" text="Aggression level: " />
			<glue />
		</hbox>
		<slider id="aggression-slider" minimum="1" maximum="100" />
		<hbox>
			<label text="Path: " />
			<textfield size="15" id="path" />
		</hbox>
		<hbox>
			<label text="Block: " />
			<spinner id="block" />
		</hbox>
		<hbox>
			<label text="Map" />
			<spinner id="map" />
		</hbox>
	</vbox>
	<hbox>
		<gridbagconstraints
			gridx="0"
			gridy="1"
			weightx="1"
			weighty="0.5"
			gridheight="1"
			anchor="GridBagConstraints.NORTHWEST"
			fill="GridBagConstraints.HORIZONTAL"
			/>

		<button id="save" text="Save" />
		<button id="close" text="Close" />
	</hbox>
</panel>
