<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
    <vbox>
        <hbox>
            <label text="Animation" />
            <combobox id="animations" />
        </hbox>
        <buttongroup>
            <radiobutton id="front" text="Show in front of current animation" />
            <radiobutton id="back" selected="true" text="Show behind current animation" />
        </buttongroup>
        <hbox>
            <vbox>
                <hbox>
                    <label text="X offset" />
                    <spinner id="x-offset" />
                    <glue />
                </hbox>

                <hbox>
                    <label text="Y offset" />
                    <spinner id="y-offset" />
                    <glue />
                </hbox>
            </vbox>

            <vbox>
                <checkbox id="flip-x" text="Flip horizontal" />
                <checkbox id="flip-y" text="Flip vertical" />
            </vbox>
        </hbox>

        <label id="alpha-text" text="Translucency" />
        <slider id="alpha" minimum="1" maximum="100" />
        <hbox>
            <button id="previous-frame" text="Previous Frame" />
            <button id="play" icon="animator/play.png" />
            <button id="stop" icon="animator/stop.png" />
            <button id="next-frame" text="Next frame" />
        </hbox>
    </vbox>
</panel>
