<panel layout="GridBagLayout">
    <label id="display" icon="animator/quick.gif">
        <gridbagconstraints
                gridx="0"
                gridy="0"
                weightx="1"
                weighty="0"
                gridheight="1"
                anchor="GridBagConstraints.NORTHWEST"
                fill="GridBagConstraints.HORIZONTAL"
                />
        </label>
    <hbox>				
        <gridbagconstraints
            gridx="0"
            gridy="1"
            weightx="1"
            weighty="0"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.HORIZONTAL"
            />

        <label text="Filter:" />
        <textfield id="filter" />
        <glue size="1" />
    </hbox>
    <button id="load" text="Load">
        <gridbagconstraints
            gridx="0"
            gridy="2"
            weightx="1"
            weighty="0"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            />
    </button>
    <scrollpane>
        <gridbagconstraints
            gridx="0"
            gridy="3"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
            />
        <list id="list" />
    </scrollpane>
</panel>
