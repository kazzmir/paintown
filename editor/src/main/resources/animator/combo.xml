<?xml version="1.0" encoding="UTF-8"?>
<panel layout="GridBagLayout">
    <panel layout="GridBagLayout" id="canvas">
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="0.9"
            weighty="1"
            fill="GridBagConstraints.BOTH"
            anchor="GridBagConstraints.NORTHWEST"
            />
    </panel>
    <vbox>
        <gridbagconstraints
            gridx="1"
            gridy="0"
            weightx="0.1"
            weighty="1"
            anchor="GridBagConstraints.NORTHWEST"
            />
        <label text="Sequence of animations to display" />
        <scrollpane>
            <list id="animations" />
        </scrollpane>
        <combobox id="select" />
        <hbox>
            <button id="add" text="Add" />
            <button id="remove" text="remove" />
        </hbox>
        <vbox>
            <gridbagconstraints
                gridx="0"
                gridy="0"
                weightx="0.1"
                weighty="0.1"
                gridheight="1"
                gridwidth="1"
                fill="GridBagConstraints.NONE"
                anchor="GridBagConstraints.NORTHWEST"
                />
            <label text="Tools" />
            <combobox id="tools" />
            <panel id="tool-area" layout="GridBagLayout" />
        </vbox>
        <hbox>
            <button id="previous-frame" text="Previous Frame" />
            <glue size="1" />
            <button id="play" icon="animator/play.png" />
            <glue size="1" />
            <button id="stop" icon="animator/stop.png" />
            <glue size="1" />
            <button id="next-frame" text="Next Frame" />
            <glue />
        </hbox>
    </vbox>
</panel>
