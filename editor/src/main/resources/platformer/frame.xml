<?xml version="1.0" ?>

<dialog Size="500,600" resizable="false" title="Frame Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>
    <panel layout="GridBagLayout">
        <vbox>
            <vbox border="TitledBorder(LineBorder(black,2),Selected Image,TitledBorder.CENTER, TitledBorder.TOP)">
                <hbox>
                    <panel id="image-view" />
                </hbox>
                <hbox>
                    <combobox id="image" />
                </hbox>
            </vbox>
            <hbox border="TitledBorder(LineBorder(black,2),Alpha,TitledBorder.CENTER, TitledBorder.TOP)">
                <spinner id="alpha" />
            </hbox>
            <hbox border="TitledBorder(LineBorder(black,2),Flipping, TitledBorder.CENTER, TitledBorder.TOP)">
                <hbox>
                    <label text="Vertical: " />
                    <checkbox id="vflip" />
                </hbox>
                <hbox>
                    <label text="Horizontal: " />
                    <checkbox id="hflip" />
                </hbox>
                <glue />
            </hbox>
            <vbox border="TitledBorder(LineBorder(black,2),Render Timer,TitledBorder.CENTER, TitledBorder.TOP)">
                <spinner id="time" />
                <label text="(Set to -1 for infinite time)" />
            </vbox>
            
            <hbox border="TitledBorder(LineBorder(black,2),Collision Info, TitledBorder.CENTER, TitledBorder.TOP)">
                <label text="Enabled: " />
                <checkbox id="collision-enabled" />
                <glue />
                <button text="Edit Collision Area" id="collision-edit" />
            </hbox>
            <glue />
        </vbox>
    </panel>

    <hbox>
        <button text="Close" id="close"/>
    </hbox>
    
</vbox>

</dialog>
