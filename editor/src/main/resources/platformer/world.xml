<panel layout="GridBagLayout">
    <vbox>
        <gridbagconstraints
            gridx="0"
            gridy="0"
            weightx="1"
            weighty="1"
            gridheight="1"
            anchor="GridBagConstraints.NORTHWEST"
            fill="GridBagConstraints.BOTH"
        />
        <vbox border="TitledBorder(LineBorder(black,2),World,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <label text="Name: " />
                <textfield id="name" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Dimensions X: " />
                <spinner id="dimensions-x" />
                <label text="   Y: " />
                <spinner id="dimensions-y" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Background fill color: " />
                <button text="Choose" id="fill-color" />
                <panel id="fill-color-display" />
                <label text="Enabled" />
                <checkbox id="enable-fill-color" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Scale: 2.0" id="scale-label" />
                <slider id="scale" minimum="1" maximum="20" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Offset X: " />
                <spinner id="offset-x" />
                <label text="   Y: " />
                <spinner id="offset-y" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Enable Animations: " />
                <checkbox id="enable-animations" />
                <label text="Display FPS: " />
                <checkbox id="display-fps" />
                
            </hbox>
        </vbox>
        <vbox>
            <hbox  MaximumSize="450,450" border="TitledBorder(LineBorder(black,2),Resolution,TitledBorder.CENTER, TitledBorder.TOP)">
                <label text="X: " />
                <spinner id="resolution-x" />
                <label text="   Y: " />
                <spinner id="resolution-y" />
                
            </hbox>
        </vbox>
        <vbox border="TitledBorder(LineBorder(black,2),Mechanics,TitledBorder.CENTER, TitledBorder.TOP)">
            <hbox  MaximumSize="450,450">
                <label text="Gravity X: " />
                <spinner id="gravity-x" />
                <label text="   Y: " />
                <spinner id="gravity-y" />
                
            </hbox>
            <hbox  MaximumSize="450,450">
                <label text="Acceleration: " />
                <spinner id="acceleration" />
                
            </hbox>
        </vbox>
        <hbox MaximumSize="450,450" border="TitledBorder(LineBorder(black,2),Overlay,TitledBorder.CENTER, TitledBorder.TOP)">
            <vbox>
                <hbox>
                    <button text="Choose" id="overlay-button" />
                    <slider id="overlay-slider" minimum="0" maximum="50" />
                </hbox>
                <hbox>
                    <label text="     Overlay image that is selected:      " />
                </hbox>
                <hbox>
                    <textfield id="overlay" />
                </hbox>
            </vbox>
        </hbox>
        <glue/>
    </vbox>
</panel>
