<?xml version="1.0" ?>

<dialog Size="500,500" resizable="false" title="Tile Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>
    <panel layout="GridBagLayout">
        <vbox>
            <vbox border="TitledBorder(LineBorder(black,2),Selected Animation,TitledBorder.CENTER, TitledBorder.TOP)">
                <hbox>
                    <panel id="animation-view" />
                </hbox>
                <hbox>
                    <combobox id="animation" />
                </hbox>
            </vbox>
            <hbox border="TitledBorder(LineBorder(black,2),Placement,TitledBorder.CENTER, TitledBorder.TOP)">
                <vbox border="TitledBorder(LineBorder(gray,1),Row,TitledBorder.CENTER, TitledBorder.TOP)">
                    <spinner id="row" />
                </vbox>
                <vbox border="TitledBorder(LineBorder(gray,1),Column,TitledBorder.CENTER, TitledBorder.TOP)">
                    <spinner id="column" />
                </vbox>
            </hbox>
        </vbox>
    </panel>

    <hbox>
        <button text="Close" id="close"/>
    </hbox>
    
</vbox>

</dialog>
