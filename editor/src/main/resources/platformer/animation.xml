<?xml version="1.0" ?>

<dialog Size="500,600" resizable="false" title="Animation Dialog"  defaultCloseOperation="JFrame.HIDE_ON_CLOSE" id="dialog">

<vbox>
    <panel layout="GridBagLayout">
        <vbox>
            <hbox border="TitledBorder(LineBorder(black,2),Name,TitledBorder.CENTER, TitledBorder.TOP)">
                <textfield id="name" />
            </hbox>
            <hbox border="TitledBorder(LineBorder(black,2),Base Directory,TitledBorder.CENTER, TitledBorder.TOP)">
                <vbox>
                    <hbox>
                        <button text="Choose" id="basedir-button" />
                        <label text="    Directory that is selected:              " />
                    </hbox>
                    <hbox>
                        <textfield id="basedir" />
                    </hbox>
                </vbox>
            </hbox>
            <vbox border="TitledBorder(LineBorder(black,2),Images,TitledBorder.CENTER, TitledBorder.TOP)">
                <hbox>
                    <scrollpane minimumSize="150,150">
                        <list id="images" />
                    </scrollpane>
                </hbox>
                <hbox>
                    <button text="Add" id="add-image-button" />
                    <button text="Remove" id="remove-image-button" />
                </hbox>
            </vbox>
            <vbox border="TitledBorder(LineBorder(black,2),Frames,TitledBorder.CENTER, TitledBorder.TOP)">
                <hbox>
                    <scrollpane minimumSize="150,150">
                        <list id="frames" />
                    </scrollpane>
                </hbox>
                <hbox>
                    <button text="Add" id="add-frame-button" />
                    <button text="Edit" id="edit-frame-button" />
                    <button text="Up" id="up-frame-button" />
                    <button text="Down" id="down-frame-button" />
                    <button text="Set Loop" id="loop-frame-button" />
                    <button text="Remove" id="remove-frame-button" />
                </hbox>
            </vbox>
            <hbox border="TitledBorder(LineBorder(black,2),Loop Point,TitledBorder.CENTER, TitledBorder.TOP)">
                <textfield id="loop" />
            </hbox>
            <glue />
        </vbox>
    </panel>

    <hbox>
        <button text="Close" id="close"/>
    </hbox>
    
</vbox>

</dialog>
