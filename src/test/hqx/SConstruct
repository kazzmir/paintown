Import('use')

testEnv = use.Clone()
testEnv.VariantDir('test', '../../')
testEnv.VariantDir('common', '../common')

source = Split("""
common/init.cpp
common/timer.cpp
test/configuration.cpp
test/globals.cpp
test/factory/font_factory.cpp
test/factory/font_render.cpp
""")

hq2x_source = Split("""hq2x.cpp""")
xbr_source = Split("""xbr.cpp""")
performance_source = Split("""performance.cpp""")

x = []
x.append(testEnv.Program('hqx', hq2x_source + source))
x.append(testEnv.Program('xbr', xbr_source + source))
x.append(testEnv.Program('performance', performance_source + source))
Return('x')
